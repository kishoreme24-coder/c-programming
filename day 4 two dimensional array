#include <stdio.h>

int main() {
    // Declare a two-dimensional array (3 rows, 4 columns)
    int matrix[3][4];
    int i, j;

    // Input elements into the 2D array
    printf("Enter elements for a 3x4 matrix:\n");
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 4; j++) {
            printf("Enter element at matrix[%d][%d]: ", i, j);
            scanf("%d", &matrix[i][j]);
        }
    }

    // Display elements of the 2D array
    printf("\nDisplaying the 3x4 matrix:\n");
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 4; j++) {
            printf("%d\t", matrix[i][j]); // Use tab for better formatting
        }
        printf("\n"); // Newline after each row
    }

    return 0;
}
