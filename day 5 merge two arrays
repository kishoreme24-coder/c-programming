#include <stdio.h>

int main() {
    int arr1[] = {1, 2, 3};
    int size1 = sizeof(arr1) / sizeof(arr1[0]);

    int arr2[] = {4, 5, 6};
    int size2 = sizeof(arr2) / sizeof(arr2[0]);

    int mergedArr[size1 + size2]; // Create a new array to hold merged elements

    // Copy elements from arr1 to mergedArr
    for (int i = 0; i < size1; i++) {
        mergedArr[i] = arr1[i];
    }

    // Copy elements from arr2 to mergedArr, starting after arr1's elements
    for (int i = 0; i < size2; i++) {
        mergedArr[size1 + i] = arr2[i];
    }

    printf("Merged Array: ");
    for (int i = 0; i < size1 + size2; i++) {
        printf("%d ", mergedArr[i]);
    }
    printf("\n");

    return 0;
}
