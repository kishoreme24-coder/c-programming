#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[200];
    int i, wordCount = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    
    str[strcspn(str, "\n")] = '\0';

    for (i = 0; str[i] != '\0'; i++) 
        if (!isspace(str[i]) && (i == 0 || isspace(str[i - 1]))) {
            wordCount++;
        }
    }

    printf("Total number of words: %d\n", wordCount);

    return 0;
}

