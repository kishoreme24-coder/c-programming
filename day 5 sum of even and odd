#include <stdio.h>

int main() {
    int i, limit, even_sum = 0, odd_sum = 0;

    
    printf("Please Enter the Maximum Limit Value: ");
    scanf("%d", &limit);

    
    for (i = 1; i <= limit; i++) {
        
        if (i % 2 == 0) {
            even_sum += i; 
        } else {
            odd_sum += i;  
        }
    }

    
    printf("The Sum of Even Numbers up to %d = %d\n", limit, even_sum);
    printf("The Sum of Odd Numbers up to %d = %d\n", limit, odd_sum);

    return 0; 
}
